  langid = {english},
  file = {C\:\\Users\\Francisco\\Zotero\\storage\\63HWM8KN\\Novák-Szabó et al. - 2018 - Universal characteristics of particle shape evolut.pdf;C\:\\Users\\Francisco\\Zotero\\storage\\6SV8IIZM\\tab-pdf.html}
