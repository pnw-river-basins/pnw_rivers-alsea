  file = {C\:\\Users\\Francisco\\Zotero\\storage\\FRWTJQIC\\Ward - 1986 - Lignin and Cellulose Content of Benthic Fine Parti.pdf}
}

@article{wohletz1989,
  title = {Particle Size Distributions and the Sequential Fragmentation/Transport Theory Applied to Volcanic Ash},
  author = {Wohletz, K. H. and Sheridan, M. F. and Brown, W. K.},
  year = {1989},
  month = nov,
  journal = {Journal of Geophysical Research: Solid Earth},
  volume = {94},
  number = {B11},
  pages = {15703--15721},
  issn = {2156-2202},
  doi = {10.1029/JB094iB11p15703},
  abstract = {The assumption that distributions of mass versus size interval for fragmented materials fit the log normal distribution is empirically based and has historical roots in the late 19th century. Other often used distributions (e.g., Rosin-Rammler, Weibull) are also empirical and have the general form for mass per size interval: n(l) = kl{$\alpha$} exp (-l{$\beta$}), where n(l) represents the number of particles of diameter l, l is the normalized particle diameter, and k, {$\alpha$}, and {$\beta$} are constants. We describe and extend the sequential fragmentation distribution to include transport effects upon observed volcanic ash size distributions. The sequential fragmentation/transport (SFT) distribution is also of the above mathematical form, but it has a physical basis rather than empirical. The SFT model applies to a particle-mass distribution formed by a sequence of fragmentation (comminution) and transport (size sorting) events acting upon an initial mass m{${'}$}: n(x, m) = C {$\int\int$} n(x{${'}$}, m{${'}$})p({$\xi$})dx{${'}$} dm{${'}$}, where x{${'}$} denotes spatial location along a linear axis, C is a constant, and integration is performed over distance from an origin to the sample location and mass limits from 0 to m. We show that the probability function that models the production of particles of different size from an initial mass and sorts that distribution, p({$\xi$}), is related to mg, where g (noted as {$\gamma$} for fragmentation processes) is a free parameter that determines the location, breadth, and skewness of the distribution; g({$\gamma$}) must be greater than -1, and it increases from that value as the distribution matures with greater number of sequential steps in the fragmentation or transport process; {$\gamma$} is expected to be near -1 for ``sudden'' fragmentation mechanisms such as single-event explosions and transport mechanisms that are functionally dependent upon particle mass. This free parameter will be more positive for evolved fragmentation mechanisms such as ball milling and complex transport processes such as saltation. The SFT provides better fits to many types of volcanic ash samples than does the log normal curve. Modeling of the SFT shows its similarity to the log normal curve on size frequency histograms; it differs by its variable skewness controlled by {$\gamma$}. Skewed distributions are typical of many volcanic ash samples, and characterization of them by the SFT allows interpretation of eruptive and transport mechanisms.},
  copyright = {Copyright 1989 by the American Geophysical Union.},
  langid = {english},
  file = {C\:\\Users\\Francisco\\Zotero\\storage\\YXEMAMZS\\Wohletz et al. - 1989 - Particle size distributions and the sequential fra.pdf;C\:\\Users\\Francisco\\Zotero\\storage\\AUMQE7UK\\JB094iB11p15703.html}
}

@article{wysocki2021,
  title = {Mud in Sandy Riverbed Deposits as a Proxy for Ancient Fine-Sediment Supply},
  author = {Wysocki, N. and Hajek, E.},
  year = {2021},
  month = apr,
  journal = {Geology},
  volume = {49},
  number = {8},
  pages = {931--935},
  issn = {0091-7613},
  doi = {10.1130/G48251.1},
  abstract = {The amount of silt and clay available to rivers reflects source-terrain composition and weathering and can be a primary control on the form and dynamics of channel networks. Fine sediment also affects the permeability of buried fluvial reservoirs. Despite this significance, there is currently a lack of methods for reconstructing how much fine sediment was transported by ancient rivers. Mud accumulations in sandy river deposits are often interpreted as indicators of variable flow conditions; however, these deposits may present an opportunity to constrain how much fine sediment was transported through ancient rivers. We report results from a series of experiments designed to evaluate how much clay and silt are preserved in sandy riverbed deposits under constant and variable discharge conditions. Our results demonstrate that (1) mud deposits, including drapes and lenses, form readily under constant, high-discharge conditions, (2) the amount of fine sediment recovered from bed-material deposits increases as fine-sediment supply increases, and (3) fine-sediment retention is higher during bed aggradation than during bypass conditions. These results indicate that the net retention of clay and silt in sandy riverbed deposits may be a simple but powerful proxy for comparing the overall amount of fine sediment supplied to ancient rivers.},
  file = {C\:\\Users\\Francisco\\Zotero\\storage\\XM26WCZW\\Wysocki and Hajek - 2021 - Mud in sandy riverbed deposits as a proxy for anci.pdf;C\:\\Users\\Francisco\\Zotero\\storage\\W9S7DBC3\\Mud-in-sandy-riverbed-deposits-as-a-proxy-for.html}
}

@article{yawar2019,
  title = {How {{Mud}} and {{Sand May Mingle}}: {{Exploring Co-Transport}} and {{Deposition Sand}} and {{Mud}} with {{Flume Experiments}} - {{Implications}} for {{Shale Sedimentology}} and {{Fluvial Systems}}},
  shorttitle = {How {{Mud}} and {{Sand May Mingle}}},
  author = {Yawar, Z. and Schieber, J.},
  year = {2019},
  month = dec,
  volume = {2019},
  pages = {EP51E-2138},
  abstract = {Mudstones contain substantial quantities of lamina-forming detrital quartz in the coarse silt size range, and some even contain lamina/lenses of sand. Whereas the origin of silty laminae is a partitioning phenomenon that affects bedload transport of flocculated muds, the implications of sandy layers are poorly understood. Due to potential bed erosion downstream of sand ripples, and loading of the substrate, one may wonder whether water-rich surface muds (soupy substrate) would be eroded prior to active sand accumulation or would collapse due to the added weight. For the interpretation of ancient successions this question is critical. If muds with intercalated sand layers/ripples imply (as commonly presumed) intermittent high energy conditions and erosion, one would have to also assume a substantial loss of stratigraphic continuity. Are there alternatives to this "conventional" interpretation? In a new set of experiments these issues were explored with sands of fine to coarse grain size. For example, we can show that medium to coarse sand can migrate across a surface of soupy flocculated mud (85 vol \% water content) without inflicting damage (erosion, fabric collapse) to the mud surface. Because the flow velocities at which mud beds accrete from migrating bedload ripples of flocculated clays overlap with erosional threshold and transport velocities for fine to coarse sand, we conducted experiments where sand was added to clay suspensions to explore their co-deposition. At constant flow velocity, sand grains continued to move over simultaneously accreting clay beds, forming thin layers of a few grains thickness. There are several implications from these experiments, one of them being that the presence of sand layers in mudstone successions does no longer automatically imply that a substantial portion of the sedimentary record may have been eroded by high energy events and lost. Instead the sand and mud may have accumulated under the same flow conditions with little or no associated erosion. In rivers with a mud-dominated load, the observed process may for example explain the seemingly counterintuitive interstratification of sand and mud in fluvial point bars during single flood events.},
  keywords = {1824 Geomorphology: general,1825 Geomorphology: fluvial,1830 Groundwater/surface water interaction,1856 River channels,HYDROLOGY},
  annotation = {ADS Bibcode: 2019AGUFMEP51E2138Y}
}

@article{yu2012,
  title = {Predictions of Vertical Sediment Flux in Oscillatory Flows Using a Two-Phase, Sheet-Flow Model},
  author = {Yu, Xiao and Hsu, Tian-Jian and Jenkins, James T. and Liu, Philip L. -F.},
  year = {2012},
  month = nov,
  journal = {Advances in Water Resources},
  series = {Two-{{Phase Modeling}} of {{Sediment Dynamics}}},
  volume = {48},
  pages = {2--17},
  issn = {0309-1708},
  doi = {10.1016/j.advwatres.2012.05.012},
  abstract = {A two-phase sheet flow model is utilized to investigate the wave-induced vertical sediment flux in the benthic boundary layer. The near-bed vertical sediment flux is a critical parameterization for suspended load models. In this paper, we show that the vertical sediment fluxes predicted by the two-phase model agree with the U-tube data for oscillatory flows. Both the measured data and model results indicated that the sediment upward flux (pick-up) increases with Shields parameter (or bottom bed stress) during the flow acceleration phase, but quickly reaches a saturated value with a ``plateau'' near the peak flow. This feature is also captured by the reference concentration formulation, but not the pick-up function formulation, developed empirically for steady flows. With further consideration of wave\textendash current interaction and wave-induced streaming inside the boundary layer, we conclude that to accurately parameterize the upward sediment flux, the feedback of the sediment phase to the carrier flows must be included. The feedback mechanism is introduced through sediment stresses and drag forces.},
  langid = {english},
  keywords = {Sediment transport,Sheet flow,Two-phase flow,Vertical sediment flux},
  file = {C\:\\Users\\Francisco\\Zotero\\storage\\HE3NKJK3\\Yu et al. - 2012 - Predictions of vertical sediment flux in oscillato.pdf;C\:\\Users\\Francisco\\Zotero\\storage\\6WXWALLM\\S0309170812001492.html}
}

